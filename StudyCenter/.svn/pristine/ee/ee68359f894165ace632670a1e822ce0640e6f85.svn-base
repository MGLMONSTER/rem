
#box{
    width: 90%;
    margin: 0 auto;
    height: auto;
    overflow: hidden;
}
/* 顶部选项卡 */
.top{
    width: 100%;
    height: auto;
    overflow: hidden;
    margin-top: 20px;
}
.top_tab_box{
    width: 100%;
    height: 50px;
}
.top_tab_box .top_tab{
    width: 120px;
    height: 100%;
    border-radius: 10px;
    line-height: 50px;
    text-align: center;
    float: left;
    border: 1px solid #000000;
    box-sizing: border-box;
    margin-left: 140px;
}
.top_tab_box .top_now{
    border: none;
    background-color: rgb(48,71,127);
    color: #fff;
}
/* 筛选列表 */
.top_tab_list{
    width: 100%;
    height: auto;
    overflow: hidden;
    background: -webkit-linear-gradient(rgb(43,63,110), white); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(rgb(43,63,110), white); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(rgb(43,63,110), white); /* Firefox 3.6 - 15 */
    background: linear-gradient(rgb(43,63,110), white); /* 标准的语法 */
    border: 1px solid #000000;
    box-sizing: border-box;
    padding-bottom: 20px;
}
.top_tab_list .tab_list{
    width: 100%;
    height: 100%;
}
.top_tab_list .tab_list li{
    padding: 0 10px;
    height: 40px;
    border-radius: 40px;
    float: left;
    text-align: center;
    line-height: 40px;
    background-color: #fff;
    box-shadow: 10px 10px 20px #333;
    margin: 20px 0 0 20px;
}
.top_tab_list .tab_list .current{
    background: -webkit-linear-gradient(rgb(43,63,110), white); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(rgb(43,63,110), white); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(rgb(43,63,110), white); /* Firefox 3.6 - 15 */
    background: linear-gradient(rgb(43,63,110), white); /* 标准的语法 */
}

/* 分割线 */
.cut_line{
    width: 90%;
    height: 10px;
    background-color: rgb(228, 228, 228);
    margin: 20px auto;
    box-shadow: 5px 5px 10px rgb(178,178,178);
}

/* 四个按钮 */
.fourBtn_box{
    width: 90%;
    height: 80px;
    display: flex;
    justify-content: space-around;
    flex-wrap: nowrap;
    margin: 0 auto 20px;
}
.fourBtn_box li{
    width: 100px;
    height: 50px;
    box-sizing: border-box;
    border: 1px solid #000000;
    line-height: 50px;
    text-align: center;
    border-radius: 50px;
    box-shadow: 10px 10px 20px #cccccc;
    background-color: #cccccc;
}

/* 课程列表 */
.C_list{
    width: 100%;
    height: auto;
    overflow: hidden;
}
.C_list li{
    width: 100%;
    height: auto;
    overflow: hidden;
    margin-bottom: 30px;
    display: flex;
    justify-content: space-between;
    flex-wrap: nowrap;
}
.C_list li .imgBox{
    width: 300px;
    height: 165px;
    box-sizing: border-box;
    padding: 10px 0;
    border-radius: 10px;
    background-color: #000000;
}
.C_list li .r_side{
    width: 350px;
    height: 150px;
}
.C_list li .r_side .C_title{
    width: 300px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    box-sizing: border-box;
    border: 1px solid #000000;
    border-radius: 50px;
}
.C_list li .r_side .scoreBox{
    width: 100%;
    height: 30px;
    color: rgb(153,153,153);
    margin:30px 0;
}
.C_list li .r_side .scoreBox .score{
    float: left;
}
.C_list li .r_side .scoreBox .studyNum{
    float: right;
}
.C_list li .r_side .good{
    width: 100%;
    height: 30px;
    text-align: center;
    font-size: 20px;
    color: rgb(153,153,153);
}



















