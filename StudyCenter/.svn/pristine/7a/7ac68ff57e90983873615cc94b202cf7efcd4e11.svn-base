*{
    margin: 0;
    padding: 0;
}
html,body{
    width: 100%;
    height: 100%;
    font-size: 24px;
}
input{
    border: none;
    outline: none;
}
img{
    display: block;
}
a{
    text-decoration: none;
    color: black;
}
ul{
    list-style: none;
}

/* loading框 */
#loadingDiv{
    width: 300px;
    height: 150px;
    border-radius: 10px;
    top: 50%;
    left: 50%;
    margin-left: -150px;
    margin-top: -75px;
    background-color: rgba(0,0,0,.5);
    text-align: center;
    line-height: 150px;
    color: wheat;
    position: fixed;
    z-index: 9;
}
#delDiv{
    width: 300px;
    height: 150px;
    border-radius: 10px;
    top: 50%;
    left: 50%;
    margin-left: -150px;
    margin-top: -75px;
    background-color: rgba(0,0,0,.5);
    text-align: center;
    line-height: 150px;
    color: rgb(49, 247, 49);
    position: fixed;
    z-index: 9;
    display: none;
}
/* 错误页 */
#error{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 8;
    background-color: rgb(50,87,117);
    display: none;
}
#error>img{
    width: 100%;
    height: auto;
}
#error>p{
    width: 50%;
    height: 50px;
    line-height: 50px;
    margin: 50px auto 0;
    font-size: 24px;
    font-weight: bold;
    background-color: crimson;
    color: white;
    text-align: center;
    box-sizing: border-box;
    border-radius: 50px;
    letter-spacing: 10px;
}
